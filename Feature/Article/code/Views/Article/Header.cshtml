@{
    // var item = Sitecore.Context.Database.GetItem("/sitecore/content/Alexa/Home/Settings/GlobalSettings");
    var item = Sitecore.Context.Database.GetItem("{167070A3-81D5-4289-9709-A430D7E32CDC}");
}
<style type="text/css">
    .DisplayBlock {
        display: block;
        color: white;
    }

    .display-3 {
        font-size: 4.5rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .lead {
        font-size: 1.171875rem;
        font-weight: 300;
    }

    p {
        margin-top: 0;
        margin-bottom: 1rem;
    }

    p {
        margin-top: 0;
        margin-bottom: 1rem;
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
    }
</style>
<div class="container">
    <div class="jumbotron text-white bg-primary">
        <h1 class="display-3">@Html.Sitecore().Field("HeaderTitle", item)</h1>
        <p class="lead">@Html.Sitecore().Field("HeaderSubTitle", item)</p>
    </div>
</div><!-- /.container -->
<div class="DisplayBlock" style="width: auto; height: 40%; border: 0px yellow solid;display:none">
    <div style="background-color: blue; width: 100%; top:0px;display:inline-block;padding-left:6%">
        <h1 class="display-3" style="margin-bottom: 0.5rem; font-family: inherit;">@Html.Sitecore().Field("HeaderTitle", item)</h1> <br />
        <p class="lead">@Html.Sitecore().Field("HeaderSubTitle", item)</p>

    </div>
</div>